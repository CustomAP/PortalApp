<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.aceshub.portal.About">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="1dp"
android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="5dp"
        android:layout_marginTop="2dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="276dp"
            android:layout_height="225dp"

            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="normal|bold"
                android:text="About Us"/>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This App is designed in view of taking attendance for coep students.It has taken into view the harships the teachers of our college face everyday while taking attendance and aims to resolve that with our simplified and easy approach towards taking and calculating attendance."

            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="textStart" />

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="normal|bold"
            android:text="Contact Us"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address - Coep Hostel"





            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="textStart" />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mob - 465464481651"




                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/cardview_dark_background"
                android:textAlignment="textStart" />
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>

</ScrollView>
