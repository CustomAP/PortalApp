<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcffffff"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.aceshub.portal.attendence.AttendanceActivity">

    <!-- weights are given but not working
        thats why explicitly heights are set.
        -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="0dp"
        app:cardBackgroundColor="#7cf6f4ec"
        app:cardCornerRadius="3dp"
        android:layout_weight="0.15">

        <TextView
            android:id="@+id/mis_date_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#1974ba"
            android:textSize="18sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>
    <!--
    Absent and presenty numbers are not required
    separately. Graphics(Colors) can tell about
    present and absent
    <TextView
        android:id="@+id/mis_date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#224184"
        android:text=""
        android:textSize="20sp" />-->

